<article class="">

  <div class="w-full aspect-video overflow-hidden">

  <video width="480" height="480"  autoplay="true" loop="true" class="w-full">
    <source src="content/upload/tattoo.mov" type="video/mp4" >
  </video>


  </div>

  {% comment %} {% if image %}
    <div class="aspect-video overflow-hidden">
    {% render 'image/image.liquid',
      file: image,
      alt: title,
      sizes: "(min-width: 30em) 50vw, 100vw",
      widths: "640, 1024, 1280",
      format: "webp",
      loading: "eager",
      css: "w-full"
    %}
    </div>
  {% endif %} {% endcomment %}

  <div class="text-lg">
    {{ content }}
  </div>
</article>

