{%- if env.mode != 'prod' %}<!-- _src/__includes/footer.liquid  -->{%- endif  -%}


<footer class="bg-gray-950 text-gray-100 mt-16 py-8 border-t-black border-t-2">
<div class="pagewidth flex flex-col pt-4 items-center">

  {% comment %} identity{% endcomment %}



    <div class="flex gap-2" aria-label="Address">
      <div>{{ global.address.name }}</div>
      <div>{{ global.address.street }}</div>
      <div>{{ global.address.zip }} {{ global.address.locality }}</div>
    </div>

    {% if global.address.street and global.address.zip and global.address.country %}
      <button onclick="openinmap('{{ global.address.street }},{{ global.address.zip }},{{ global.address.country }}')" target="_blank" rel="noopener" class="inline-flex flex-row items-center pt-4">
        <div class="w-6 h-6 text-tone-300 mr-2">{% include "./map-pin.svg" %}</div>
        <div>Map</div>
      </button>
      {% endif %}


      {% if global.address.phone %}
        <div class="flex flex-row items-center pt-4">
          <div class="w-4 h-4 text-tone-300 mr-2">{% include "./phone.svg" %}</div>
          <a href="tel:{{ global.address.phone | replace:" ", "" }}" itemprop="telephone">{{ global.address.phone }}</a>
        </div>
      {% endif %}

      {% if global.address.email %}
        <div class="flex flex-row items-center pt-4">
          <div class="w-4 h-4 text-tone-300 mr-2">{% include "./envelope.svg" %}</div>
          <a href="mailto:{{ global.address.email }}" itemprop="email">{{ global.address.email }}</a><br>
        </div>
      {% endif %}

      {% include "some/socialmedia.liquid" %}



</div>
</footer>


{% comment %}This is used for the iphone / android so they can work prober cause ...
{% endcomment %}
<script>
  function openinmap(map) {
    // If it's an iPhone..
    if ((navigator.platform.indexOf("iPhone") != -1)
      || (navigator.platform.indexOf("iPod") != -1)
      || (navigator.platform.indexOf("iPad") != -1))
      window.open("maps://maps.google.com/?q=" + map);
    else
      window.open("https://maps.google.com/?q=" + map);
  }
</script>

