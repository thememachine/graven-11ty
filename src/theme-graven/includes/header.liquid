{%- if env.mode != 'prod' %}<!-- ðŸ‘‹ src/theme-grunn/includes/header.liquid -->{%- endif -%}
<header class="fixed z-50 lg:relative bg-gray-950 w-full h-16 md:h-20" x-data="{ openmenu: false }">

  <a href="#main" class="sr-only focus:not-sr-only sr-tab">Skip to Content</a>

  {% comment %}main wrap header elements {% endcomment %}
  <div class="pagewidth flex flex-row h-full justify-between">

    {% comment %}logo and menu {% endcomment %}
    <div class="flex flex-row">

      <a href="/" title="{{site.title}}" class="w-32 h-20 overflow-hidden inline-flex items-center md:mr-4">
      {% include 'image/image.liquid',
          file: site.icon,
          widths: "640",
          format: "webp",
          loading: loading | default: 'eager',
          css: "w-full"
      %}

        <h1 class="sr-only"> {{ site.title }}</h1>
      </a>

      {% include "menu/menu.liquid" %}
    </div>

    {% if site.rss %}
      <div class="hidden md:flex justify-end items-center">

      <a href="/feed.xml" class="hidden md:block w-6 h-6 justify-self-end text-stone-200 hover:text-stone-700">
        <span class="sr-only">RSS Feed</span>
        {% include "svg/rss.svg" %}
      </a>

      </div>
    {% endif %}


    <div class="flex items-center md:hidden text-2xl text-stone-400 ">
      <div>{{ site.title }}</div>
    </div>

    {% comment %}mobile menu burron {% endcomment %}
    <button @click="openmenu = !openmenu" class="w-10 block md:hidden space-x-2 focus:outline-none" type="button" aria-label="toggle mobile menu">
      <span class="relative inline-block w-10 h-6">
        <span class="
        block mt-2 absolute w-8 h-1 bg-stone-400 rounded-md
        transition-all ease-linear duration-75
        before:absolute before:-top-2 before:h-1 before:w-8 before:bg-stone-500 dark:before:bg-stone-400 before:rounded-md before:content-[''] before:block
        after:absolute after:top-2 after:h-1 after:w-8 after:bg-stone-300 dark:after:bg-stone-500  after:rounded-md after:content-[''] after:block
        " :class="openmenu ? 'rotate-45 before:rotate-90 before:translate-y-2 before:bg-gray-700  after:opacity-0' : '' "></span>
      </span>
    </button>

  </div>

  {% include "menu/menu-mobile.liquid" %}

</header>

{% include "../layouts/notification/bar.liquid" %}

